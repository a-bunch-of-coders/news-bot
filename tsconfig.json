{
  "compilerOptions": {
    "module": "nodenext",                     /* Use native ESM output */
    "target": "es6",                     /* Keep decorators metadata intact */
    "moduleResolution": "nodenext",             /* Node-style resolution */
    "experimentalDecorators": true,         /* Enable @decorators */
    "emitDecoratorMetadata": false,         /* discordx doesnâ€™t rely on reflect-metadata at runtime */
    "noImplicitAny": true,                  /* Catch missing types */
    "strict": true,                         /* Enable all strict-mode checks */
    "strictNullChecks": true,               /* Force explicit null/undefined handling */
    "noUncheckedIndexedAccess": true,       /* Tighten array/object indexing */
    "esModuleInterop": true,                /* import x from 'y' for CommonJS modules */
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,                      /* For debugging */
    "declaration": true,                    /* Emit .d.ts files for library authors */
    "skipLibCheck": true,
    "outDir": "./dist",                  /* Output directory for compiled files */
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
